---
import './style.scss';
import Icon from "../icon/icon.astro";

import ProjectCard from "../projectCard/projectCard.astro";

import arrow_right from '../../media/icons/arrow_right.svg?raw';

import mattermost_thumbnail from '../../media/projectThumbnails/mattermost.png';
import focalboard_thumbnail from '../../media/projectThumbnails/focalboard.png';
import mobile_thumbnail from '../../media/projectThumbnails/mm-mobile.png';
import standup_raven from '../../media/projectThumbnails/standup_raven.png';
---

<div class="allProjects projects">
    <div class="header">
        <h1>
            <span>Projects</span>
        </h1>
        <div class="body">
            <p>
                As a seasoned Full Stack Developer with a decade of experience crafting innovative and user-centric web solutions, my goal is to help you build the digital brand you envision.
            </p>
        </div>
    </div>
    <div class="projectCards">
        <ProjectCard
                className="mattermost"
                image={mattermost_thumbnail}
                alignImage='right'
                title="Mattermost"
                subtitle="Web App"
                link="https://mattermost.com"
        />
        <ProjectCard
                className="focalboard"
                image={focalboard_thumbnail}
                alignImage='right'
                title="Focalboard"
                subtitle="Web App"
                link="https://www.focalboard.com/"
        />
        <ProjectCard
                className="mattermost-mobile"
                image={mobile_thumbnail}
                alignImage='right'
                title="Mattermost Mobile App"
                subtitle="Mobile App"
                link="https://github.com/mattermost/mattermost-mobile"
        />
        <ProjectCard
                className="standup-raven"
                image={standup_raven}
                alignImage='right'
                title="Standup Raven"
                subtitle="Mattermost Plugin"
                link="https://www.standupraven.com/"
        />
    </div>
</div>
